/**
 * 全局样式
 * 1.解决适配问题
 * 2.解决常见的兼容性问题
 * 3.主题 Theme
 */
@import "./global.styl"

html
  font-size $root-size
//@media screen and (min-width:320px)
//	html
//    font-size 85.333333px
//@media screen and (min-width:375px)
//	html
//    font-size $root-size
//@media screen and (min-width:414px)
//	html
//    font-size 110.4px
body
  color $color-txt1
  font-size Px2rem(14)
  background $color-FFF
  line-height 1
  margin 0
  -webkit-font-smoothing: antialiased;
  font-family PingFang-SC-Regular,Helvetica,sans-serif
  webkit-text-size-adjust none
// *
//   -webkit-tap-highlight-color: rgba(0, 0, 0, 0)
//   outline none
html, body
  width 100%
  height 100%
h1,h2,h3,h4,h5,em,i,p,ul,ol,dl,dd
  font-weight normal
  font-style normal
  margin 0
  padding 0
ul,ol,li
  list-style none
a
  &:link,
  &:visited,
  &:hover,
  &:active
    color $color-lianjia
    text-decoration none
button
  border none
  background transparent
// placeholder
::-webkit-input-placeholder
  color $color-txt2
:-moz-placeholder
  color $color-txt2
::-moz-placeholder
  color $color-txt2
:-ms-input-placeholder
  color  $color-txt2
  font-weight normal

.fl
  float left
.fr
  float right
.clearfix:after
  content ''
  display block
  clear both
.flex-row
  display flex
  flex-direction: column;
.flex-item
  flex 1
.app-content
  position absolute
  top 0
  left 0
  right 0
  bottom 0
  box-sizing border-box

  








  